<UserControl x:Class="HardTrainingViews.Views.PlanModule.PlanCreator.UserConrols.DayToSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardTrainingViews.Views.PlanModule.PlanCreator.UserConrols"
             Background="LightYellow"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="75">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="cbxIsTrain"  HorizontalAlignment="LEFT" Grid.Row="1" IsChecked="{Binding Path=DayChecked}"  VerticalAlignment="Center"/>
        <Button x:Name="btnAdd" Content="Dodaj"  HorizontalAlignment="Right"  Grid.Row="1" VerticalAlignment="Center" Height="29" Width="57"/>
        <Label x:Name="lblDay" Content="{Binding Path=DayLabel}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
